{
    "private": true,
    "packageManager": "pnpm@10.30.0",
    "engines": {
        "node": ">=24.13.1",
        "pnpm": ">=10.30.0"
    },
    "type": "module",
    "scripts": {
        "build": "pnpm build:dev",
        "build:prod": "pnpm --color /^build:prod:.*$/",
        "build:prod:js": "cross-env BUILD_TARGET=js vite build --mode production",
        "build:prod:css": "cross-env BUILD_TARGET=css vite build --mode production",
        "build:prod:server": "cross-env NODE_ENV=production node esbuild.server.js",
        "build:dev": "pnpm --color /^build:dev:.*$/",
        "build:dev:js": "cross-env BUILD_TARGET=js vite build --mode development",
        "build:dev:css": "cross-env BUILD_TARGET=css vite build --mode development",
        "build:dev:server": "cross-env NODE_ENV=development node esbuild.server.js",
        "check": "pnpm check:lint && pnpm check:types && pnpm test",
        "check:lint": "biome check .",
        "check:types": "tsc --noEmit -p src/main/resources/tsconfig.json && tsc --noEmit",
        "test": "vitest run",
        "fix": "biome check . --fix",
        "prepare": "husky"
    },
    "devDependencies": {
        "@biomejs/biome": "~2.4.4",
        "@enonic-types/core": "~7.16.2",
        "@enonic-types/global": "~7.16.2",
        "@enonic-types/lib-admin": "~7.16.2",
        "@enonic-types/lib-auditlog": "~7.16.2",
        "@enonic-types/lib-auth": "~7.16.2",
        "@enonic-types/lib-context": "~7.16.2",
        "@enonic-types/lib-event": "~7.16.2",
        "@enonic-types/lib-export": "~7.16.2",
        "@enonic-types/lib-i18n": "~7.16.2",
        "@enonic-types/lib-io": "~7.16.2",
        "@enonic-types/lib-node": "~7.16.2",
        "@enonic-types/lib-portal": "~7.16.2",
        "@enonic-types/lib-repo": "~7.16.2",
        "@enonic-types/lib-task": "~7.16.2",
        "@enonic-types/lib-websocket": "~7.16.2",
        "@tailwindcss/vite": "~4.2.0",
        "@tanstack/react-query-devtools": "~5.91.3",
        "@tanstack/react-router-devtools": "~1.162.2",
        "@tanstack/router-plugin": "~1.162.2",
        "@types/react": "~19.2.14",
        "@types/react-dom": "~19.2.3",
        "@vitejs/plugin-react": "~5.1.4",
        "cross-env": "~10.1.0",
        "esbuild": "~0.27.3",
        "husky": "~9.1.7",
        "tailwindcss": "~4.2.0",
        "typescript": "~5.9.3",
        "vite": "~7.3.1",
        "vitest": "~4.0.18"
    },
    "dependencies": {
        "@radix-ui/react-alert-dialog": "~1.1.15",
        "@radix-ui/react-checkbox": "~1.3.3",
        "@radix-ui/react-dialog": "~1.1.15",
        "@radix-ui/react-dropdown-menu": "~2.1.16",
        "@radix-ui/react-label": "~2.1.8",
        "@radix-ui/react-scroll-area": "~1.2.10",
        "@radix-ui/react-select": "~2.2.6",
        "@radix-ui/react-separator": "~1.1.8",
        "@radix-ui/react-slot": "~1.2.4",
        "@radix-ui/react-tabs": "~1.1.13",
        "@radix-ui/react-tooltip": "~1.2.8",
        "@tanstack/react-query": "~5.90.21",
        "@tanstack/react-router": "~1.162.2",
        "@tanstack/react-table": "~8.21.3",
        "class-variance-authority": "~0.7.1",
        "clsx": "~2.1.1",
        "lucide-react": "~0.575.0",
        "react": "~19.2.4",
        "react-dom": "~19.2.4",
        "shiki": "~3.22.0",
        "sonner": "~2.0.7",
        "tailwind-merge": "~3.5.0",
        "zod": "~4.3.6"
    }
}
